@model Vraze.Models.GameSession
<div class="text-center">
    <h1 class="display-4">Start and End Session</h1>
</div>
<form method="post" asp-action="Create">
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Remove Session</h2>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Id"></label>
            </div>
            <div class="col-8">
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-4 row">

                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="Start"/>
                </div>
                <div class="col">
                    <input type="submit" class="btn btn-info w-100" value="End"/>
                </div>
                <div class="col">
                    <!-- If you want to go back to a view form a different foler u can specify the controller here-->
                        <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                </div>
            </div>
        </div>
    </div>
</form>